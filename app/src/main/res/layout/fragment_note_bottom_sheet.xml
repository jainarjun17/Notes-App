        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline"
                app:tint="@color/white" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/ColorDarkBlack"
        android:orientation="horizontal"


        app:layout_constraintTop_toBottomOf="@id/iconLinearLayout">


        <FrameLayout
            android:id="@+id/fNote1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:paddingStart="7dp">

            <ImageView
                android:id="@+id/clr1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/note_color_1"
                android:padding="4dp"
                app:tint="@color/white" />
            <ImageView
                android:id="@+id/tick1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_tick"
                android:padding="8dp"
                android:visibility="invisible"
                app:tint="@color/ColorWhiteNote"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fNote2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:paddingStart="7dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/note_color_2"
                android:padding="4dp"
                app:tint="@color/white" />
